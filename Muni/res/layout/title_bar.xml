<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/nav_bar"
                android:orientation="horizontal">

    <ImageButton android:src="@drawable/drawer_arrow"
                 android:background="@null"
                 android:paddingLeft="3dp"
                 android:paddingTop="12dp"
                 android:paddingBottom="12dp"
                 android:paddingRight="12dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:scaleType="centerInside"
                 android:layout_centerVertical="true"
                 android:id="@+id/toggle_button"
                 android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:id="@+id/event_selector_layout"
        android:layout_toRightOf="@id/toggle_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/event_selector_past"
            android:text="Past"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        <View
                android:layout_width="2dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_height="fill_parent"
                android:background="#ffffff"/>
        <TextView
                android:id="@+id/event_selector_upcoming"
                android:text="Upcoming"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#EA4D3E"
                android:layout_height="wrap_content"
                android:layout_width="0dp"/>

        </LinearLayout>

    <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:id="@+id/document_selector_layout"
            android:layout_toRightOf="@id/toggle_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:visibility="gone">
        <TextView
                android:id="@+id/document_selector_browse"
                android:text="Browse"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#EA4D3E"/>
        <View
                android:layout_width="2dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_height="fill_parent"
                android:background="#ffffff"/>
        <TextView
                android:id="@+id/document_selector_recent"
                android:text="Recent"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_width="0dp"/>

    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Reset"
        android:textColor="#EA4D3E"
        android:textSize="20sp"
        android:id="@+id/contact_action_reset"
        android:visibility="gone"/>

    <TextView
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Sort"
            android:textColor="#EA4D3E"
            android:textSize="20sp"
            android:id="@+id/places_action_sort"
            android:visibility="gone"/>



</RelativeLayout>