<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/contact_list_item_layout"
              android:padding="5dp"
              android:background="@drawable/rounded_rectangle_contact_item"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:id="@+id/contact_list_item_cancel"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_imageview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/contact_item_x"/>
    <TextView
        android:id="@+id/contact_list_item_name"
        android:textColor="#333B46"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_toLeftOf="@id/contact_list_item_cancel"
        android:layout_alignParentLeft="true"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</RelativeLayout>