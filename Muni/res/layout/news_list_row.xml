<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/rounded_rectangle_event">
    <RelativeLayout
            android:id="@+id/news_top_layout"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:id="@+id/news_image"
                android:padding="1dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/loading"
                android:background="@drawable/custom_imageview"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"/>

        <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:id="@+id/news_headline"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/news_image"
                android:textSize="20sp"
                android:textStyle="bold"/>

        <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_date"
                android:layout_below="@id/news_headline"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/event_image"
                android:textSize="12sp"
                android:textColor="#E94D3E"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#999999"
        android:id="@+id/news_sub_headline"
            />

</LinearLayout>